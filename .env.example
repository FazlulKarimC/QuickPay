# Database (PostgreSQL/NeonDB)
# Get your connection string from your PostgreSQL provider
# For NeonDB: https://console.neon.tech
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="replace-with-strong-secret"
NEXTAUTH_URL="http://localhost:3000"

# Rate Limiting Configuration
# Window duration in milliseconds (60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
# Max requests per window for general endpoints
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window for API endpoints (merchant API)
RATE_LIMIT_MAX_API_REQUESTS=1000

# Bank Simulator Configuration (Educational Mode)
# Enable simulated bank processing UI (set to false for production)
SIMULATION_MODE=true
# Success rate for simulated payments (0.0 to 1.0, e.g., 0.8 = 80% success)
BANK_SUCCESS_RATE=0.8
# Minimum processing delay in milliseconds
BANK_MIN_DELAY_MS=2000
# Maximum processing delay in milliseconds
BANK_MAX_DELAY_MS=5000
# Secret key for webhook validation
WEBHOOK_SECRET=your-webhook-secret-key
# Allowed callback domains (comma-separated, no spaces)
ALLOWED_CALLBACK_DOMAINS=localhost:3000

# Rate Limiter Security
# Trusted proxy IP addresses (comma-separated)
TRUSTED_PROXY_IPS=127.0.0.1,::1
# Maximum entries to store in rate limit tracking
MAX_RATE_LIMIT_ENTRIES=10000
